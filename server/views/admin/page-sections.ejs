    }

    // Drag and drop
    var list = document.getElementById('sectionList');
    if (list) {
      var draggedItem = null;

      list.querySelectorAll('.section-item').forEach(function(item) {
        item.addEventListener('dragstart', function(e) {
          draggedItem = item;
          item.classList.add('dragging');
          e.dataTransfer.effectAllowed = 'move';
        });

        item.addEventListener('dragend', function() {
          item.classList.remove('dragging');
          draggedItem = null;
          saveOrder();
        });

        item.addEventListener('dragover', function(e) {
          e.preventDefault();
          if (draggedItem && draggedItem !== item) {
            var rect = item.getBoundingClientRect();
            var midY = rect.top + rect.height / 2;
            if (e.clientY < midY) {
              list.insertBefore(draggedItem, item);
            } else {
              list.insertBefore(draggedItem, item.nextSibling);
            }
          }
        });
      });

      async function saveOrder() {
        var items = [];
        list.querySelectorAll('.section-item').forEach(function(item, idx) {
          items.push({ id: parseInt(item.dataset.id), display_order: idx + 1 });
        });

        try {
          var res = await fetch('/api/page-content-reorder', {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json', 'Authorization': 'Bearer ' + getToken() },
            body: JSON.stringify({ items: items })
          });
          if (!res.ok) throw new Error('ìˆœì„œ ë³€ê²½ ì‹¤íŒ¨');
          showToast('ìˆœì„œê°€ ë³€ê²½ë˜ì—ˆìŠµë‹ˆë‹¤.');
        } catch (err) {
