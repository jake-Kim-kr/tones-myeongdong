  <script>
    var PAGE = '<%= page.page %>';
    var contentData = {};

    try {
      contentData = JSON.parse('<%= page.content_json.replace(/\'/g, "\\\'").replace(/\n/g, "\\n") %>') || {};
    } catch(e) {
      contentData = {};
    }

    function getToken() {
      var m = document.cookie.match(/token=([^;]+)/);
      return m ? m[1] : null;
    }

    function showToast(msg, isSuccess) {
      var t = document.getElementById('toast');
      t.textContent = msg;
      t.className = 'toast show' + (isSuccess ? ' success' : '');
      setTimeout(function() { t.className = 'toast'; }, 2500);
    }

    function logout() {
      document.cookie = 'token=; path=/; max-age=0';
      window.location.href = '/admin/login';
    }

    // Populate simple fields
    function populateFields() {
      document.querySelectorAll('[data-key]').forEach(function(el) {
        if (contentData[el.dataset.key]) {
          el.value = contentData[el.dataset.key];
        }
      });
    }

    // Dynamic list items
    function renderList(containerId, items, fields) {
      var container = document.getElementById(containerId);
      container.innerHTML = '';
      if (!items) return;
      items.forEach(function(item, idx) {
        addItemDOM(containerId, item, idx, fields);
      });
    }

    function addItemDOM(containerId, data, idx, fields) {
      var container = document.getElementById(containerId);
      var div = document.createElement('div');
      div.className = 'item-group';
      div.dataset.idx = idx;

      var header = containerId === 'features' ? '특장점 ' + (idx + 1) :
                   containerId === 'steps' ? '단계 ' + (idx + 1) :
                   'FAQ ' + (idx + 1);

      var html = '<div class="item-group__header"><span class="item-group__title">' + header + '</span><button type="button" class="item-group__remove" onclick="removeItem(\'' + containerId + '\',' + idx + ')">삭제</button></div>';

      if (containerId === 'faqs') {
        html += '<div class="field"><label class="field__label">질문</label><input type="text" class="field__input" data-list="' + containerId + '" data-idx="' + idx + '" data-field="question" value="' + (data.question || '').replace(/"/g, '&quot;') + '"></div>';
        html += '<div class="field"><label class="field__label">답변</label><textarea class="field__textarea" data-list="' + containerId + '" data-idx="' + idx + '" data-field="answer">' + (data.answer || '') + '</textarea></div>';
      } else {
        html += '<div class="field-row">';
        html += '<div class="field"><label class="field__label">제목</label><input type="text" class="field__input" data-list="' + containerId + '" data-idx="' + idx + '" data-field="title" value="' + (data.title || '').replace(/"/g, '&quot;') + '"></div>';
        html += '<div class="field"><label class="field__label">설명</label><textarea class="field__textarea" data-list="' + containerId + '" data-idx="' + idx + '" data-field="desc">' + (data.desc || '') + '</textarea></div>';
        html += '</div>';
      }

      div.innerHTML = html;
      container.appendChild(div);
    }

    function addItem(containerId, defaults) {
      if (!contentData[containerId]) contentData[containerId] = [];
      contentData[containerId].push(defaults);
      var idx = contentData[containerId].length - 1;
      addItemDOM(containerId, defaults, idx);
    }

    function removeItem(containerId, idx) {
      if (!contentData[containerId]) return;
      contentData[containerId].splice(idx, 1);
      renderList(containerId, contentData[containerId]);
    }

    function collectData() {
      var data = {};

      // Simple fields
      document.querySelectorAll('[data-key]').forEach(function(el) {
        if (el.value.trim()) data[el.dataset.key] = el.value.trim();
      });

      // List fields
      ['features', 'steps', 'faqs'].forEach(function(listId) {
        var items = [];
        var els = document.querySelectorAll('[data-list="' + listId + '"]');
        var groups = {};
        els.forEach(function(el) {
          var idx = el.dataset.idx;
          if (!groups[idx]) groups[idx] = {};
          groups[idx][el.dataset.field] = el.value.trim();
        });
        Object.keys(groups).sort(function(a,b){return a-b;}).forEach(function(k) {
          var item = groups[k];
          var hasContent = Object.values(item).some(function(v) { return v; });
          if (hasContent) items.push(item);
        });
        if (items.length > 0) data[listId] = items;
      });

      return data;
    }

    // Save
    async function saveData() {
      var data = collectData();

      try {
        var res = await fetch('/api/treatment-pages/' + PAGE, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json', 'Authorization': 'Bearer ' + getToken() },
          body: JSON.stringify({ content_json: JSON.stringify(data) })
        });
        if (!res.ok) throw new Error('저장 실패');
        showToast('저장되었습니다.', true);
      } catch(err) {
        showToast('오류: ' + err.message, false);
      }
    }

    // Init
    populateFields();
    renderList('features', contentData.features || []);
    renderList('steps', contentData.steps || []);
    renderList('faqs', contentData.faqs || []);
  </script>
</body>
