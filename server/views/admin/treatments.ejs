  <main class="main">
    <header class="header">
      <h1 class="header__title">시술 콘텐츠 관리</h1>
      <p class="header__desc">각 시술 페이지의 텍스트 내용(제목, 설명, FAQ 등)을 편집할 수 있습니다.</p>
    </header>

    <div class="content">
      <%
      var sections = {
        '리프팅': pages.filter(function(p){ return p.page.startsWith('lifting'); }),
        '피부관리': pages.filter(function(p){ return p.page.startsWith('skincare'); }),
        '주사시술': pages.filter(function(p){ return p.page.startsWith('injection'); }),
        '체형관리': pages.filter(function(p){ return p.page.startsWith('body'); })
      };
      Object.keys(sections).forEach(function(sec) {
      %>
        <div class="section-divider"><%= sec %></div>
        <ul class="page-list">
          <% sections[sec].forEach(function(p) { %>
            <li class="page-item">
              <div class="page-item__info">
                <span class="page-item__label"><%= p.page_label %></span>
                <span class="page-item__path">treatments/<%= p.page %>.html</span>
                <span class="page-item__status <%= p.content_json !== '{}' ? 'edited' : '' %>"><%= p.content_json !== '{}' ? '편집됨' : '기본 콘텐츠' %></span>
              </div>
              <a href="/admin/treatments/edit/<%= p.page %>" class="btn btn--primary">편집</a>
            </li>
          <% }); %>
        </ul>
      <% }); %>
    </div>
  </main>

  <script>
    function logout() {
      document.cookie = 'token=; path=/; max-age=0';
      window.location.href = '/admin/login';
    }
  </script>
