        <div class="editor-card">
          <div class="editor-card__title">기본 정보</div>
          <div class="field">
            <label class="field__label">제목</label>
            <input type="text" class="field__input" id="title" name="title" value="<%= column ? column.title : '' %>" placeholder="칼럼 제목을 입력하세요" required>
          </div>
          <div class="field-row">
            <div class="field">
              <label class="field__label">카테고리</label>
              <select class="field__select" id="category_id" name="category_id">
                <option value="">카테고리 선택</option>
                <% categories.forEach(cat => { %>
                  <option value="<%= cat.id %>" <%= (column && column.category_id === cat.id) ? 'selected' : '' %>><%= cat.name %></option>
                <% }); %>
              </select>
            </div>
            <div class="field">
              <label class="field__label">작성자</label>
              <input type="text" class="field__input" id="author" name="author" value="<%= column ? column.author : 'OOO 원장' %>" placeholder="작성자 이름">
            </div>
          </div>
        </div>

        <!-- Thumbnail -->
        <div class="editor-card">
          <div class="editor-card__title">썸네일 이미지</div>
          <div class="field">
            <div class="thumbnail-wrap">
              <div class="thumbnail-preview" id="thumbnailPreview">
                <% if (column && column.thumbnail) { %>
                  <img src="<%= column.thumbnail %>" alt="thumbnail">
                <% } else { %>
                  <span class="placeholder">미리보기</span>
                <% } %>
              </div>
              <div class="thumbnail-input">
                <input type="file" id="thumbnailFile" accept="image/*" onchange="uploadThumbnail(this)">
                <input type="text" class="field__input url-input" id="thumbnail" name="thumbnail" value="<%= column ? (column.thumbnail || '') : '' %>" placeholder="이미지 URL (자동 입력)">
              </div>
            </div>
          </div>
        </div>

        <!-- Content -->
        <div class="editor-card">
          <div class="editor-card__title">내용</div>
          <div class="field">
            <div class="content-toolbar">
              <button type="button" onclick="insertTag('b')"><b>B</b></button>
              <button type="button" onclick="insertTag('i')"><i>I</i></button>
              <button type="button" onclick="insertTag('h2')">H2</button>
              <button type="button" onclick="insertTag('h3')">H3</button>
              <button type="button" onclick="insertTag('p')">P</button>
              <button type="button" onclick="insertTag('blockquote')">인용</button>
              <button type="button" onclick="insertImg()">이미지</button>
              <button type="button" onclick="insertTag('ul')">목록</button>
              <button type="button" onclick="insertTag('a')">링크</button>
            </div>
            <textarea id="content" name="content" class="field__textarea content-area" placeholder="HTML 형식으로 내용을 작성하세요..."><%= column ? column.content : '' %></textarea>
          </div>
        </div>

        <!-- Status -->
        <div class="editor-card">
          <div class="editor-card__title">발행 설정</div>
          <div class="field">
            <label class="field__label">발행 상태</label>
            <div class="radio-group">
              <label>
                <input type="radio" name="status" value="draft" <%= (!column || column.status === 'draft') ? 'checked' : '' %>>
                초안 (비공개)
              </label>
              <label>
                <input type="radio" name="status" value="published" <%= (column && column.status === 'published') ? 'checked' : '' %>>
                발행 (공개)
              </label>
            </div>
          </div>
        </div>

        <!-- SEO -->
        <div class="editor-card">
          <div class="editor-card__title">SEO 설정</div>
          <div class="field">
            <label class="field__label">SEO 타이틀</label>
            <input type="text" class="field__input" id="seo_title" name="seo_title" value="<%= column ? (column.seo_title || '') : '' %>" placeholder="검색 결과에 표시될 제목 (미입력 시 칼럼 제목 사용)">
          </div>
          <div class="field">
            <label class="field__label">SEO 설명</label>
            <textarea id="seo_desc" name="seo_desc" class="field__textarea seo-area" placeholder="검색 결과에 표시될 설명 (150자 이내 권장)"><%= column ? (column.seo_desc || '') : '' %></textarea>
          </div>
        </div>
      </form>
    </div>
