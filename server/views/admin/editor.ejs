    <button class="btn btn--primary" onclick="saveColumn()">
      <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
      저장
    </button>
  </div>

  <script>
    const isEdit = <%= column ? 'true' : 'false' %>;
    const columnId = <%= column ? column.id : 'null' %>;

    function getCookie(name) {
      const match = document.cookie.match(new RegExp('(^| )' + name + '=([^;]+)'));
      return match ? match[2] : null;
    }

    function logout() {
      document.cookie = 'token=; path=/; max-age=0';
      window.location.href = '/admin/login';
    }

    function insertTag(tag) {
      const textarea = document.getElementById('content');
      const start = textarea.selectionStart;
      const end = textarea.selectionEnd;
      const selected = textarea.value.substring(start, end);

      let insertion;
      if (tag === 'a') {
        const url = prompt('URL을 입력하세요:', 'https://');
        if (!url) return;
        insertion = `<a href="${url}">${selected || '링크 텍스트'}</a>`;
      } else if (tag === 'ul') {
        insertion = `<ul>\n  <li>${selected || '항목'}</li>\n</ul>`;
      } else {
        insertion = `<${tag}>${selected || ''}</${tag}>`;
      }

      textarea.value = textarea.value.substring(0, start) + insertion + textarea.value.substring(end);
      textarea.focus();
      textarea.selectionStart = textarea.selectionEnd = start + insertion.length;
    }

    function insertImg() {
      const url = prompt('이미지 URL을 입력하세요:');
      if (!url) return;
      const textarea = document.getElementById('content');
      const start = textarea.selectionStart;
      const insertion = `<img src="${url}" alt="" style="max-width:100%;height:auto;">`;
      textarea.value = textarea.value.substring(0, start) + insertion + textarea.value.substring(start);
      textarea.focus();
    }

    async function uploadThumbnail(input) {
      const file = input.files[0];
      if (!file) return;

      const formData = new FormData();
      formData.append('image', file);

      const token = getCookie('token');

      try {
        const res = await fetch('/api/upload', {
          method: 'POST',
          headers: { 'Authorization': `Bearer ${token}` },
          body: formData
        });

        const data = await res.json();
        if (res.ok) {
          document.getElementById('thumbnail').value = data.url;
          document.getElementById('thumbnailPreview').innerHTML = `<img src="${data.url}" alt="thumbnail">`;
        } else {
          alert(data.error || '업로드에 실패했습니다.');
        }
      } catch (err) {
        alert('서버 연결에 실패했습니다.');
      }
    }

    async function saveColumn() {
      const token = getCookie('token');
      const feedback = document.getElementById('saveFeedback');

      const body = {
        title: document.getElementById('title').value,
        category_id: document.getElementById('category_id').value || null,
        content: document.getElementById('content').value,
        thumbnail: document.getElementById('thumbnail').value || null,
        seo_title: document.getElementById('seo_title').value,
        seo_desc: document.getElementById('seo_desc').value,
        author: document.getElementById('author').value,
        status: document.querySelector('input[name="status"]:checked').value
      };

      if (!body.title) {
        alert('제목을 입력해주세요.');
        return;
      }

      try {
        const url = isEdit ? `/api/columns/${columnId}` : '/api/columns';
        const method = isEdit ? 'PUT' : 'POST';

        const res = await fetch(url, {
          method,
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${token}`
          },
          body: JSON.stringify(body)
        });

        const data = await res.json();

        if (res.ok) {
          feedback.className = 'save-feedback success';
          feedback.textContent = '저장되었습니다.';

          if (!isEdit) {
            window.location.href = `/admin/columns/edit/${data.id}`;
          }
        } else {
          feedback.className = 'save-feedback error';
          feedback.textContent = data.error || '저장에 실패했습니다.';
        }
      } catch (err) {
        feedback.className = 'save-feedback error';
        feedback.textContent = '서버 연결에 실패했습니다.';
      }

      setTimeout(() => { feedback.className = 'save-feedback'; }, 4000);
    }

    function previewColumn() {
      const content = document.getElementById('content').value;
      const title = document.getElementById('title').value;
      const w = window.open('', '_blank');
      w.document.write(`<!DOCTYPE html><html lang="ko"><head><meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>미리보기 - ${title}</title>
        <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@300;400;500;600&display=swap" rel="stylesheet">
        <style>body{font-family:'Noto Sans KR',sans-serif;max-width:700px;margin:40px auto;padding:0 20px;color:#333;line-height:1.8;background:#f5f5f5;}
        h1{font-size:28px;color:#5C2A2E;margin-bottom:24px;} img{max-width:100%;height:auto;border-radius:4px;}
        blockquote{border-left:3px solid #5C2A2E;padding-left:16px;margin:16px 0;color:#666;}</style>
        </head><body><h1>${title}</h1>${content}</body></html>`);
      w.document.close();
    }
  </script>
