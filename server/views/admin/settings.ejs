  <div class="toast" id="toast"></div>

  <script>
    function getToken() {
      var m = document.cookie.match(/token=([^;]+)/);
      return m ? m[1] : null;
    }
    function showToast(msg) {
      var t = document.getElementById('toast');
      t.textContent = msg;
      t.classList.add('show');
      setTimeout(function() { t.classList.remove('show'); }, 2500);
    }

    function hexToRgb(hex) {
      hex = hex.replace('#', '');
      return {
        r: parseInt(hex.substring(0, 2), 16),
        g: parseInt(hex.substring(2, 4), 16),
        b: parseInt(hex.substring(4, 6), 16)
      };
    }

    function rgbToHex(r, g, b) {
      return '#' + [r, g, b].map(function(x) {
        var hex = Math.max(0, Math.min(255, Math.round(x))).toString(16);
        return hex.length === 1 ? '0' + hex : hex;
      }).join('');
    }

    function lighten(hex, amount) {
      var rgb = hexToRgb(hex);
      return rgbToHex(
        rgb.r + (255 - rgb.r) * amount,
        rgb.g + (255 - rgb.g) * amount,
        rgb.b + (255 - rgb.b) * amount
      );
    }

    function darken(hex, amount) {
      var rgb = hexToRgb(hex);
      return rgbToHex(
        rgb.r * (1 - amount),
        rgb.g * (1 - amount),
        rgb.b * (1 - amount)
      );
    }

    function syncColor(hex) {
      document.getElementById('colorHex').value = hex.toUpperCase();
      updateVariants(hex);
      updatePreview(hex);
    }

    function syncFromHex(hex) {
      if (hex.length === 7 && hex[0] === '#') {
        document.getElementById('colorPicker').value = hex;
        updateVariants(hex);
        updatePreview(hex);
      }
    }

    function updateVariants(hex) {
      var light = lighten(hex, 0.2);
      var dark = darken(hex, 0.35);
      document.getElementById('lightPicker').value = light;
      document.getElementById('lightHex').value = light.toUpperCase();
      document.getElementById('darkPicker').value = dark;
      document.getElementById('darkHex').value = dark.toUpperCase();
    }

    function updatePreview(hex) {
      var dark = darken(hex, 0.35);
      document.getElementById('previewHeader').style.background = hex;
      document.getElementById('previewBtn').style.background = hex;
      document.getElementById('previewCard').style.background = dark;
    }

    async function saveTheme() {
      var primary = document.getElementById('colorHex').value;
      var light = document.getElementById('lightHex').value;
      var dark = document.getElementById('darkHex').value;

      try {
        var res = await fetch('/api/settings', {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json', 'Authorization': 'Bearer ' + getToken() },
          body: JSON.stringify({
            theme_primary: primary,
            theme_primary_light: light,
            theme_primary_dark: dark
          })
        });
        if (!res.ok) throw new Error('저장 실패');
        showToast('테마가 적용되었습니다. 사이트를 새로고침하면 반영됩니다.');
      } catch(err) {
        showToast('오류: ' + err.message);
      }
    }

    function logout() {
      document.cookie = 'token=; path=/; max-age=0';
      window.location.href = '/admin/login';
    }

    // Init preview
    updatePreview(document.getElementById('colorHex').value);
  </script>
