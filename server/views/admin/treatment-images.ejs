  <main class="main">
    <header class="header">
      <h1 class="header__title">시술 이미지 관리</h1>
      <p class="header__desc">각 시술 페이지의 장비 이미지, 카테고리 이미지 등을 관리합니다.</p>
    </header>

    <div class="content">
      <% Object.keys(grouped).forEach(function(page) { %>
        <div class="page-group">
          <div class="page-group__header">
            <h2 class="page-group__title"><%= pageNames[page] || page %></h2>
            <span class="page-group__badge"><%= grouped[page].length %>개 슬롯</span>
          </div>
          <div class="page-group__grid">
            <% grouped[page].forEach(function(img) { %>
              <div class="slot-card" data-id="<%= img.id %>">
                <div class="slot-card__preview">
                  <% if (img.image_url) { %>
                    <% if (img.image_url.match(/\.(mp4|mov|webm)$/i)) { %>
                      <video src="<%= img.image_url %>" muted loop playsinline></video>
                    <% } else { %>
                      <img src="<%= img.image_url %>" alt="<%= img.label %>">
                    <% } %>
                  <% } else { %>
                    <span class="empty">
                      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
                      이미지 없음
                    </span>
                  <% } %>
                </div>
                <div class="slot-card__body">
                  <span class="slot-card__label"><%= img.label %></span>
                  <label class="btn btn--primary">
                    <svg width="14" height="14" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"/></svg>
                    변경
                    <input type="file" class="upload-input" accept="image/*,video/mp4,video/quicktime,video/webm,.mp4,.mov,.webm" onchange="uploadImage(this, <%= img.id %>)">
                  </label>
                </div>
              </div>
            <% }); %>
          </div>
        </div>
      <% }); %>
    </div>
  </main>

  <div class="toast" id="toast"></div>

  <script>
    function getToken() {
      var m = document.cookie.match(/token=([^;]+)/);
      return m ? m[1] : null;
    }

    function showToast(msg, isSuccess) {
      var t = document.getElementById('toast');
      t.textContent = msg;
      t.className = 'toast show' + (isSuccess ? ' success' : '');
      setTimeout(function() { t.className = 'toast'; }, 2500);
    }

    function logout() {
      document.cookie = 'token=; path=/; max-age=0';
      window.location.href = '/admin/login';
    }

    async function uploadImage(input, id) {
      var file = input.files[0];
      if (!file) return;

      var formData = new FormData();
      formData.append('image', file);

      try {
        var uploadRes = await fetch('/api/upload', {
          method: 'POST',
          headers: { 'Authorization': 'Bearer ' + getToken() },
          body: formData
        });
        var uploadData = await uploadRes.json();
        if (!uploadRes.ok) throw new Error(uploadData.error);

        var updateRes = await fetch('/api/treatment-images/' + id, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json', 'Authorization': 'Bearer ' + getToken() },
          body: JSON.stringify({ image_url: uploadData.url })
        });
        if (!updateRes.ok) throw new Error('업데이트 실패');

        var card = document.querySelector('[data-id="' + id + '"]');
        var preview = card.querySelector('.slot-card__preview');

        if (file.type.startsWith('video/')) {
          preview.innerHTML = '<video src="' + uploadData.url + '" muted loop playsinline></video>';
        } else {
          preview.innerHTML = '<img src="' + uploadData.url + '" alt="">';
        }

        showToast('이미지가 변경되었습니다.', true);
      } catch (err) {
        showToast('오류: ' + err.message, false);
      }
      input.value = '';
    }
  </script>
</body>
</html>
